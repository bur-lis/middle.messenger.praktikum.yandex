{
    "compilerOptions": {
        "target": "es2015",
        "module": "ESNext",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "node",
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "*.ts": [
                "*"
            ]
        }
    },
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "include": [
        "src/**/*",
        "package.json"
    ],
}